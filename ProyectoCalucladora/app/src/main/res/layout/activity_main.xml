<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9daed2"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="347dp"
        android:layout_height="506dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salidaResultado">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"

                android:text="7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="9"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_division"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="/"
                android:textSize="30dp" />
        </TableRow>


        <!-- Fila 2 de botones -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_multiplicacion"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="*"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="3"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_resta"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="-"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_punto"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="."
                android:textAlignment="center"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_raiz"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:text="^"

                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_suma"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/boton"

                android:text="+"
                android:textSize="30dp" />
        </TableRow>

        <!-- Fila 5 de botones -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_borrar_ultimo"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ColorN"
                android:foregroundTint="@color/ColorN"
                android:text="D"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_borrar_todo"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/ColorN"
                android:text="C"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btn_igual"
                android:layout_width="34dp"
                android:layout_height="103dp"
                android:layout_weight="2"
                android:backgroundTint="#d63f2e"
                android:text="="
                android:textAlignment="center"
                android:textSize="30dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/salidaNumeros"
        android:layout_width="336dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:hint="0"
        android:textAlignment="textEnd"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/salidaResultado"
        android:layout_width="336dp"
        android:layout_height="59dp"
        android:layout_marginTop="100dp"

        android:textAlignment="textEnd"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>